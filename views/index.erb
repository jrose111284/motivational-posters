<body>
  <h1>Motivational Posters</h1>
  <section id="select-image">
    <h2>Step 1. select a image</h2>
    <p>Enter the keyword to search for images</p>
    <input id="search-term" type="text">
    <button id="go-search">Go!</button>
    <div id="search-results"></div>
    <div id="branding"></div>
  </select>

  <section id="add-text">
    <h2>Step 2. Add Text</h2>
    <input id="text" type="text" value="Curiosity is one of the great secrets of happiness">
  </section>

  <section id="style-image">
    <h2>Step 3. Style it!</h2>
    <div id="workspace">
      <p id="caption"></p>
    </div>
    <div id="controls">
      left: <input type="number" value="10" id="left">
      top: <input type="number" value="10" id="top">
      width: <input type="number" value="10" id="width">
      size: <input type="number" value="10" id="size">
      color: <select id="colour">
              <option>red</option>
              <option>green</option>
              <option>white</option>
              <option>black</option>
              <option>blue</option>
              <option>yellow</option>
              <option>gray</option>
              <option>orange</option>
             </select>
    </div>
